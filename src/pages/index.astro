<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portafolio - {nombre}</title>
    <style>
        :root {
            --color-primary: #2563eb;
            --color-secondary: #3b82f6;
            --color-dark: #1f2937;
            --color-light: #f8fafc;
            --color-gray: #6b7280;
            --color-border: #e5e7eb;
            --color-accent: #10b981;
            --color-highlight: #ff6f61;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', sans-serif;
            line-height: 1.6;
            color: var(--color-dark);
            background: var(--color-light);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Animaciones generales */
        .fade-in {
            opacity: 0;
            transform: translateY(40px);
            animation: fadeIn 1.5s ease forwards;
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Header */
        .header {
            background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
            color: white;
            padding: 2rem 0;
            text-align: center;
            animation: fadeIn 1.5s ease forwards;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .header h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .header p {
            font-size: 1.2rem;
            opacity: 0.9;
            margin-bottom: 1rem;
        }

        .nav {
            background: rgba(255, 255, 255, 0.1);
            padding: 1rem;
            border-radius: 10px;
            margin-top: 1rem;
            display: inline-block;
        }

        .nav a {
            color: white;
            text-decoration: none;
            margin: 0 1rem;
            font-weight: 500;
            transition: opacity 0.3s, transform 0.3s;
            padding: 0.5rem 1rem;
            border: 2px solid white;
            border-radius: 5px;
            background: rgba(255, 255, 255, 0.1);
        }

        .nav a:hover {
            opacity: 0.8;
            transform: scale(1.1);
            background: var(--color-accent);
            color: white;
            border-color: var(--color-accent);
        }

        .cv-button {
            background: var(--color-accent);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 500;
            transition: background 0.3s, transform 0.3s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        .cv-button:hover {
            background: var(--color-highlight);
            transform: scale(1.1);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

        /* Sections */
        .section {
            padding: 4rem 0;
            animation: fadeIn 1.5s ease forwards;
        }

        .section-title {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 3rem;
            color: var(--color-dark);
            position: relative;
        }

        .section-title::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background: var(--color-highlight);
        }

        /* About */
        .about {
            text-align: center;
            max-width: 600px;
            margin: 0 auto;
            font-size: 1.1rem;
            color: var(--color-gray);
        }

        /* Projects */
        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .project-card {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            animation: fadeIn 1.5s ease forwards;
        }

        .contact-links {
            display: flex;
            justify-content: center;
            gap: 1.5rem; /* Espaciado entre los logos */
            margin-top: 2rem;
        }

        .contact-link {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 64px;
            height: 64px;
            border-radius: 50%;
            background: var(--color-light);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .contact-link:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .project-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }
        .contact-button {
            background: var(--color-secondary);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 500;
            transition: background 0.3s, transform 0.3s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        .contact-button:hover {
            background: var(--color-accent);
            transform: scale(1.1);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }
        .project-image {
            width: 100%;
            height: 200px;
            background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3rem;
        }

        .project-content {
            padding: 1.5rem;
        }

        .project-title {
            font-size: 1.3rem;
            margin-bottom: 0.5rem;
            color: var(--color-dark);
        }

        .project-description {
            color: var(--color-gray);
            margin-bottom: 1rem;
            line-height: 1.5;
        }

        .project-tech {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .tech-tag {
            background: var(--color-highlight);
            color: white;
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .project-link {
            display: inline-block;
            background: var(--color-dark);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 500;
            transition: background 0.3s, transform 0.3s;
        }

        .project-link:hover {
            background: var(--color-highlight);
            transform: scale(1.1);
        }

        /* Footer */
        .footer {
            background: var(--color-dark);
            color: white;
            text-align: center;
            padding: 2rem 0;
            margin-top: 2rem;
            animation: fadeIn 1.5s ease forwards;
            box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.3);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .header h1 {
                font-size: 2rem;
            }
            
            .nav {
                display: flex;
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .projects-grid {
                grid-template-columns: 1fr;
            }
            
            .contact-links {
                flex-direction: column;
                align-items: center;
            }
            
            .contact-link {
                width: 200px;
            }
            
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header fade-in">
        <div class="container">
            <h1>{nombre}</h1>
            <p>{bio}</p>
            <nav class="nav">
                <a href="#proyectos">Proyectos</a>
                <a href="/cv/cv.pdf" target="_blank" class="cv-button">Descargar CV</a>
                <a href="#contacto" class="cv-button">Contáctame</a>
            </nav>
        </div>
    </header>

    <!-- About Section -->
    <section class="section fade-in">
        <div class="container">
            <h2 class="section-title">Sobre Mí</h2>
            <p class="about">
               Soy un desarrollador apasionado por la tecnologia, el desarrollo full-stack
               y la creacion de experecnias de usuario con React y otras tecnologias modernas.
               Me gusta compartir mis conociminetos y enfrentar nuevos
               retos para crear soluciones digitales que impacten de forma positiva
               en los usuarios.
               ¿Tienes un proyecto en mente? No dudes en contactarme.
            </p>

        </div>
    </section>

    <!-- Projects Section -->
    <section id="proyectos" class="section fade-in">
        <div class="container">
            <h2 class="section-title">Mis Proyectos</h2>
            <div class="projects-grid">
                {proyectos.map(proyecto => (
                    <div class="project-card">
                        <div class="project-image">
                            <img src={proyecto.imagen} alt={proyecto.titulo} style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px;">
                        </div>
                        <div class="project-content">
                            <h3 class="project-title">{proyecto.titulo}</h3>
                            <p class="project-description">{proyecto.descripcion}</p>
                            <div class="project-tech">
                                {proyecto.tecnologias.map(tech => (
                                    <span class="tech-tag">{tech}</span>
                                ))}
                            </div>
                            <a href={proyecto.enlace} class="project-link">Ver Proyecto</a>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Contact Section -->
<section id="contacto" class="section fade-in"> <!-- Sección de contacto -->
    <div class="container">
        <h2 class="section-title">Contactame en:</h2>
        <div class="contact-links">
            {contacto.map(contacto => (
                <a href={contacto.enlace} target="_blank" class="contact-link">
                    <img src={contacto.icono} alt={contacto.nombre} width="48" height="48" />
                </a>
            ))}
        </div>
    </div>
</section>

    <!-- Footer -->
    <footer class="footer fade-in">
        <div class="container">
            <p>&copy; 2025 EERY. Todos los derechos reservados.</p>
        </div>
    </footer>
</body>
</html>